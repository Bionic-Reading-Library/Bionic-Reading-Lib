<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/error2"
        android:id="@+id/imageView1"
        android:layout_alignParentTop="true"
        android:cropToPadding="true"
        android:scaleType="centerInside"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:id="@+id/Errmsg"
        android:text="@string/errm"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/appCompatButton1"
        android:layout_marginHorizontal="45dp"
        android:textSize="10dp"
        android:textColor="@color/easterg"
        android:layout_marginBottom="5dp"
        android:id="@+id/eagg"
        android:text="@string/easteregg"
        android:textAlignment="center"/>

    <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="45dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded"
            android:layout_above="@id/appCompatButton2"
            android:text="@string/home"
            android:id="@+id/appCompatButton1" />
    <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="45dp"
            android:background="@drawable/rounded"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:layout_above="@+id/nht"
            android:text="@string/err"
            android:id="@+id/appCompatButton2" />
</RelativeLayout>