<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TextColor">

    <RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/relativeLayout1"
    android:layout_alignParentTop="true"
    android:background="@color/TextColor"
    android:layout_above="@id/relativeLayout2">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp">
        <ImageView
            android:id="@+id/verlogo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/logo2"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/versionbuild"
            android:layout_toLeftOf="@id/verlogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/darktext"
            android:textSize="9dp"
            android:text="Version"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/appmsg"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:textSize="45dp"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/white"
            android:id="@+id/textView1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wel"
            android:textSize="12dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/white"
            android:layout_below="@+id/textView1"
            android:id="@+id/textView2"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:background="@drawable/arround"
        android:id="@+id/relativeLayout2"
        android:layout_marginRight="0.0dp"
        android:layout_marginBottom="-40.0dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:padding="20dp"
            android:id="@+id/dlbtn"
            android:layout_marginHorizontal="45dp"
            android:background="@drawable/notif">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/update"
                    android:text="@string/udate"
                    android:textSize="13dp"
                    android:textColor="@color/TextColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_below="@+id/update"
                android:id="@+id/dl"
                android:textSize="8dp"
                android:text="@string/pcd"
                android:textColor="@color/TextColor"
                android:layout_centerVertical="false" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/verp"
                android:layout_marginEnd="5dp"
                android:textAlignment="center"
                android:layout_alignParentEnd="true"
                android:text="@string/uver"
                android:textColor="@color/TextColor"
                android:layout_centerVertical="true" />
            </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="45dp"
            android:layout_marginBottom="10dp"
            android:textAllCaps="False"
            android:background="@drawable/btn"
            android:layout_above="@id/appCompatButton2"
            android:text="@string/start"
            android:textColor="@color/TextColorlight"
            android:id="@+id/appCompatButton1" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="False"
            android:layout_marginHorizontal="45dp"
            android:background="@drawable/btn2"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/nht"
            android:text="@string/exit"
            android:textColor="@color/TextColor"
            android:id="@+id/appCompatButton2" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nh"
            android:textColor="@color/darktext"
            android:layout_marginHorizontal="45dp"
            android:textSize="15dp"
            android:id="@+id/nht"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="65dp"/>
    </RelativeLayout>
</RelativeLayout>