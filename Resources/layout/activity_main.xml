<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark">

    <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/relativeLayout1"
    android:layout_alignParentTop="true"
    android:layout_above="@id/relativeLayout2">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bgg"
            android:scaleType="centerCrop"
            android:rotation="21"
            android:layout_marginLeft="-91.92dp"
            android:layout_marginRight="-1000.92dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-210.63dp"
            android:foregroundGravity="center"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wel"
            android:textSize="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/white"
            android:id="@+id/textView1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/desc"
            android:textSize="12dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/white"
            android:layout_below="@+id/textView1"
            android:id="@+id/textView2"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/relativeLayout2"
        android:layout_marginRight="0.0dp"
        android:layout_marginBottom="0.0dp"
        android:layout_alignParentBottom="true">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="45dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded"
            android:layout_above="@id/appCompatButton2"
            android:text="@string/start"
            android:id="@+id/appCompatButton1" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="45dp"
            android:background="@drawable/rounded"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/nht"
            android:text="@string/exit"
            android:id="@+id/appCompatButton2" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nh"
            android:textColor="@color/greenish"
            android:layout_marginHorizontal="45dp"
            android:textSize="15dp"
            android:id="@+id/nht"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"/>
    </RelativeLayout>
</RelativeLayout>